name:                bracer
version:             0.1.0.0
synopsis:            a rewriting system for curly-brace languages
homepage:            http://github.com/patrickt/bracer
license:             MIT
license-file:        LICENSE
author:              Patrick Thomson
maintainer:          patrick.william.thomson@gmail.com
category:            Language
build-type:          Simple
cabal-version:       >=1.10

executable bracer
  main-is:             Main.hs
  other-modules:       Overture
                     , Language.Bracer.Backends.C
                     , Language.Bracer.Syntax
                     , Language.Bracer.Parsing
  -- other-extensions:    
  build-depends:       base >=4.6 && <4.7
                     , bytestring == 0.10.4.*
                     , compdata == 0.7.0.1
                     , hashable == 1.2.1.*
                     , lens == 4.1.2
                     , mtl == 2.1.2
                     , parsers == 0.11
                     , scientific == 0.2.0.*
                     , trifecta == 1.4.2.*
                     , unordered-containers == 0.2.3.*
  -- hs-source-dirs:      
  default-language:    Haskell2010
  default-extensions:  DeriveFunctor
                     , DeriveFoldable
                     , DeriveTraversable
                     , FlexibleContexts
                     , FlexibleInstances
                     , GeneralizedNewtypeDeriving
                     , KindSignatures
                     , MultiParamTypeClasses
                     , QuasiQuotes
                     , TemplateHaskell
                     , TypeFamilies
                     , TypeOperators
